<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="Official bloging site">
    <meta name="keywords" content="Blog, Tech, Dev">
    <meta name="author" content="Souvik Mandal">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/public/style.css">
    <link rel="icon" href="/public/favicon.ico" type="image/x-icon">
    <title>New Post</title>
</head>

<body>
    <header class="header">
        <div class="logo"><img alt="image" height="50px" width="50px" src="/public/icons/wetalk_logo.png"></div>
        <div class="searchbox"> <input placeholder="search" type="search"><button><img alt="image"
                    src="/public/icons/search.png" alt="search"></button> </div>
        <div class="icons">
            <a href="new_post" class="create_new"
                style="text-decoration: none; font-weight: 600; font-size: 22px; border: rgb(194, 215, 233) 1px solid; border-radius: 5px; background-color: rgb(135, 181, 222);"><img
                    alt="image" src="/public/icons/new_post.png" alt="create new" width="30px"> create post</a>
            <div class="sub-navs"><img alt="image" src="/public/icons/Hamburger.png" alt="" width="30px"></div>
        </div>
    </header>

    <br>
    <br>
    <br>

    <section class="body">


        <section class="menu">
            <div class="collapsible"><img id="arrow" src="/public/icons/angle-right-solid.svg" height="30px" alt="arrow">
            </div>

            <a href="/home">
                <div>Home</div>
            </a>

            <a href="/about">
                <div>About </div>
            </a>

            <a href="https://github.com/<%= userData.github_ID %>">
                <div>My Account</div>
            </a>

            <a href="/logout">
                <div>Logout</div>
            </a>

        </section>


        <section class="news_feed">


            <div class="new_post">
                <div class="headline">
                    <div>Create Post</div>
                    <a href="/home">Close</a>
                </div>
                <div class="author"><img alt="image" src="<%= userData.profile_img %>">
                    <span><%= userData.name %></span>

                </div>
                <textarea class="textarea" id="input" placeholder="Type your thoughts..."></textarea>

                <br>

                <div class="warning_msg" style="text-align: center; color: brown; font-weight: 600;"></div>

                <div class="additionals">Add attatchment <div><img src="/public/icons/new_post.png" height="35px"><img src="/public/icons/connections.png" height="40px"> <img src="/public/icons/Hamburger.png" height="40px"></div> </div>

                <br>

                <button id="submit">Post</button>
            </div>


            <br>
            <br>
            <br>


        </section>
        <section class="extension">
            <div class="profile"></div>
        </section>
    </section>

    <!-- <div class="popup_button"></div> -->


</body>

<script src="/public/script.js"></script>

<script>
    var user = {
  post: function() {
      let content = document.querySelector("#input").value
      fetch("https://wetalk021.herokuapp.com/activity/onpost/create", {
        "method": "POST",
        "headers": {
            "key": "12345",
            "content-type": "application/json"
        },
        "body": JSON.stringify({
           content: content
        })
    })
    .then((Response) => {
        console.log();
        if (Response.status == 200) {
            window.location.href = '/home'
        } else {
            return Response.json();
        }
    })
    .then((getData) => {
        console.log(getData);
        document.querySelector(".warning_msg").innerHTML = `${getData.msg} <br>`
    }).catch((err) => {
          console.log(err);
      });
  }
}

document.querySelector("#submit").addEventListener("click", (e) => {
    e.preventDefault()
    user.post()
});
</script>

</html>